            <!--    <CheckBox-->
            <!--        android:id="@+id/notify_me_checkbox"-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:text="@string/first_q_first_a"-->
            <!--        android:textAppearance="?android:textAppearanceMedium" />-->
